<div class="two row column">
  <div class="four wide column" id="ContentL">
    <%= render "/devise/shared/forums" %>
  </div>

  <div class="eleven wide column">
    <div class="pagination">
      <%= will_paginate @posts %>
    </div>
    <table class="ui celled striped table">
      <thead>
        <tr>
          <th id="thead">
            Posted By
          </th>
          <th id="thead">
            Message
          </th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td>
            <%= post.user.user_name %>
          </td>
          <td>
            <%= post.message %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
