<div class="two column row">
  <div class="four wide column" id="ContentL">
    <%= render "devise/shared/forums" %>
  </div>
  <div class="eleven wide column" id="ContentM">

    <div class="login">
      <h2 id="signIn">Sign in</h2>

      <div class="formFor">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">
            <%= f.label :Username %>
            <%= f.text_field :user_name, autofocus: true %>
          </div><br>

          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field" id="rememberMe">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions" id="logIn">
            <%= f.submit "Log in", class: "custButton" %>
          </div> <br />
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
