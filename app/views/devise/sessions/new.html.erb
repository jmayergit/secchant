<div class="two column row">
  <div class="four wide column" id="ContentL">
    SEC Forums
  </div>
  <div class="eleven wide column" id="ContentM">
    <% if flash.alert %>
      <div id="error_explanation">
        <ul>
          <li><%= flash.alert %></li>
        </ul>
      </div>
    <% end %>
    <div class="login">
      <div id="header">
        <h2 id="signIn">Sign in</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :Username %>
          <%= f.text_field :user_name, autofocus: true %>
        </div><br>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
