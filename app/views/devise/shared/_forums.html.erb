<div class="Forums">
  <div id="ForumsH">
    SEC Forums
  </div>
  <% if @secForums %>
    <% for forum in @secForums %>
      <% if forum.name != 'Help Board' %>
        <div class="Forums1">

          <div class="image">
            <%= image_tag forum.image, class: "forumImage" %>
          </div>

          <div class="rightSide">
            <div class="forumTitle">
               <%= link_to forum.name, forum_show_path(forum), :class => "homeLNav" %>
            </div>
            <div class="forumDescription">
              <%= forum.description %>
            </div>
          </div>
          
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

