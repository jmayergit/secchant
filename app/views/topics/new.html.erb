<div class="two column row">
  <div class="two wide column">
    <%= render "devise/shared/leftNav" %>
  </div>
  <div class="fourteen wide column">
    <div id="bodyR">
      <div id="topicLink">
        <%= link_to @forum.name, forum_show_path(@forum), :id => "topicLink" %> - Start New Topic
      </div>
      <%= form_for @topic do |f| %>

        <%= hidden_field(:forum, :id) %>

        <%= f.label :subject %>:
        <%= f.text_field :subject %><br />

        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
