<div class="two column row">
  <div class="two wide column">
    <%= render "devise/shared/leftNav" %>
  </div>
  <div class="fourteen wide column">
    <div id="bodyR">
      <% if user_signed_in? %>
        <div id="topicLink">
          <%= link_to @forum.name, forum_show_path(@forum), :id => "topicLink" %> - Start New Topic
        </div>
        <%= form_for @topic do |f| %>

          <%= hidden_field(:forum, :id) %>

          <%= f.label :subject %>:
          <%= f.text_field :subject %><br />

          <%= f.submit %>
        <% end %>
      <% else %>
        <div id="topicError">You must be logged on in order to post on this board.</div>
        <div id="topicLogin">Click <%= link_to 'here', new_user_session_path, :class => 'topicLogin' %> to log in.</div>
      <% end %>

    </div>
  </div>
</div>
