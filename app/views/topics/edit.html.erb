<div class="sixteen wide column" id="sixteenWideColumn"></div>
<div class="two column row" id="twoColumnRow">
  <div class="two wide column" id="twoWideColumn">
    <%= render "devise/shared/leftNav" %>
  </div>
  <div class="fourteen wide column" id="fourteenWideColumn">
    <div id="bodyR">
      <%= link_to @forum.name, forum_show_path(@forum), :id => "topicLink" %>
      <div id="bbcodeTopic">
        <%= render "/posts/bbcode" %>
      </div>
      <%= form_for @topic do |topic_form| %>
        <%= topic_form.label :subject %><br />
        <%= topic_form.text_field :subject %><br />

        <%= topic_form.fields_for @post do |post| %>
          <span id="labelMessage">  Message </span> <br />
          <%= post.text_area :message %>
        <% end %>

        <div class="submit">
          <%= topic_form.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
