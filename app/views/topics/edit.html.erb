<div class="two column row">
  <div class="two wide column">
    <%= render "devise/shared/leftNav" %>
  </div>
  <div class="fourteen wide column">
    <%= link_to @forum.name, forum_show_path(@forum), :id => "topicLink" %>
    <%= form_for @topic do |topic_form| %>

      <%= hidden_field(:forum, :id) %>

      <%= topic_form.label :subject %>:
      <%= topic_form.text_field :subject %><br />

      <%= topic_form.fields_for @post do |ff| %>
        Message: <br />
        <%= ff.text_area :message %>

      <% end %>

      <%= topic_form.submit %>
    <% end %>
  </div>
</div>
